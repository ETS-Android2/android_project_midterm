<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoronaTracker" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/active</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
<!--        <item name="colorSecondaryVariant">@color/teal_700</item>-->
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/apptheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="heading_textLarge_bold">
        <item name="android:fontFamily">@font/lora</item>
        <item name="android:textSize">@dimen/large_textSize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="body_text_regular">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/medium_textSize</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="body_textMedium_bold">
        <item name="android:fontFamily">@font/lora</item>
        <item name="android:textSize">@dimen/medium_textSize</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="body_textMedium_medium">
        <item name="android:fontFamily">@font/lora</item>
        <item name="android:textSize">@dimen/medium_textSize</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>


    <style name="byline_textSmall_regular">
        <item name="android:textSize">@dimen/byline_textSize</item>
        <item name="android:textStyle">italic</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textColor">@color/defaultTextColor</item>
    </style>

    <style name="button_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_textSize</item>
        <item name="android:background">@drawable/button_style_primary</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

